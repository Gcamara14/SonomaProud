<!DOCTYPE html>
<html>
  <head>
    <title>SonomaProud</title>
    <%= csrf_meta_tags %>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport"><!--     STYLES     -->
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/99e7a6e2c6.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="mainApp margin-reset">


    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "ma-input ma-input--default ma-input--#{key}" %>
    <% end %>
     
     


    <!--=========================================-->
    <!--                 HEADER                  -->
    <!--=========================================-->
    <header class="ma-header ma-header--large">
        <div class="ma-header__logo-container">
            <a class="link-reset">
                <div class="content">
                    <div class="ma-logo"></div>
                </div>
            </a>
        </div>
        <div class="ma-header__search-container">
            <form class="form-content">
                <div class="ma-search-bar">
                    <!-- <i class="ma-search-bar__icon" data-feather="search"></i> -->
                    <label aria-hidden="true" class="screen-reader-only">Sonoma County Strong!</label>
                    <input class="ma-search-bar__input" placeholder="#SONOMAPROUD" type="text" disabled>
                </div>
            </form>
        </div>
        <div class="ma-header__nav-container">
            <nav>
                <ul class="ma-nav-list">
                <!-- SHOW THIS IF LOGGED IN -->
                <% if user_signed_in? %>
                    <li class="ma-nav-list__item">
                    <%= link_to (new_business_path) do %>
                        <button class="ma-nav-list__item__btn">Write a new Post</button>
                    <% end %>
                    </li>
                    <li class="ma-nav-list__item">
                    <%= link_to destroy_user_session_path, method: :delete do %>
                        <button class="ma-nav-list__item__btn">Log Out</button>
                    </li>
                    <% end %>
                    <li>
                    <%= link_to edit_user_registration_path, :class => "ma-nav-list__item__btn link-reset"  do %>
                        
                            <div class="content">
                                <div class="ma-avatar ma-avatar--tiny ma-avatar--border-minimal round"><img alt="" height="32" src="https://pbs.twimg.com/profile_images/888407217040498689/rp8G6S4N_400x400.jpg" width="32"></div>
                            </div>
                        <% end %>
                    </li>
                    <% end %>
                </ul>
            </nav>
        </div>
    </header>
    <div class="ma-subnav ma-subnav--simple">
        <nav class="container">
            <div class="ma-subnav__item">
                <div class="content">
                    <a href="">Home</a>
                </div>
            </div><span class="space-right-1 space-left-1">路</span>
            <div class="ma-subnav__item">
                <div class="content">
                    <a href="">About Dental Implants</a>
                </div>
            </div><span class="space-right-1 space-left-1">路</span>
            <div class="ma-subnav__item">
                <div class="content">
                    <a href="">Financing Dental Implants</a>
                </div>
            </div><span class="space-right-1 space-left-1">路</span>
            <div class="ma-subnav__item">
                <div class="content">
                    <a class="active" href="">Dental Implant Photos</a>
                </div>
            </div><span class="space-right-1 space-left-1">路</span>
            <div class="ma-subnav__item">
                <div class="content">
                    <a href="">For Implant Dentist</a>
                </div>
            </div>
        </nav>
    </div>
    <div class="space-3"></div>
    <div class="ma-subnav ma-subnav--tabs">
        <nav class="container">
            <div class="ma-subnav__item space-right-4">
                <div class="content">
                    <a class="link-reset" href="">FOR YOU</a>
                </div>
            </div>
            <div class="ma-subnav__item space-right-4">
                <div class="content active">
                    <a class="link-reset" href="">HOMES</a>
                </div>
            </div>
            <div class="ma-subnav__item space-right-4">
                <div class="content">
                    <a class="link-reset" href="">EXPERIENCES</a>
                </div>
            </div>
            <div class="ma-subnav__item">
                <div class="content">
                    <a class="link-reset" href="">PLACES</a>
                </div>
            </div>
        </nav>
    </div>

    <%= yield %>
  </body>
</html>
